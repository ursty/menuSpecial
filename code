#include <stdio.h>
#include <stdlib.h>

int menu()
{
  int choix = 0;

  while (choix < 1 || choix > 4)
  {
    printf("Menu :\n");
    printf("1 : Poulet de dinde aux escargots rotis a la sauce bearnaise \n");
    printf("2 : Concombre sucres a la sauce myrtille enrobee de chocolat \n");
    printf("3 : Escalope de kangourou saignante et sa gelee aux fraises poivrees \n");
    printf("4 : La surprise du Chef (j'en salive d'avance ...) \n");
    printf("Quelle est votre choix ? ");
    scanf("%d", &choix);
  }
  return choix;
}

int main()
{
switch (menu())
{
case 1 :
    printf("\nVous avez pris le poulet \n");
    break;
case 2 :
    printf("\nVous avez pris les concombres \n");
    break;
case 3 :
    printf("\nVous avez pris l'escalope \n");
    break;
case 4 :
    printf("\nVous avez pris la suprise du Chef. Vous etes un sacre aventurier dites donc ! \n");
    break;
}
    return 0;
}
